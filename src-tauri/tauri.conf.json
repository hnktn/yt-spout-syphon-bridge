{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yt-spout-syphon-bridge",
  "version": "0.1.0",
  "identifier": "com.nakatani.yt-spout-syphon-bridge",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "yt-spout-syphon-bridge",
        "width": 420,
        "height": 560,
        "resizable": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": ["./bindings/syphon/Syphon.framework"]
    }
  },
  "plugins": {
    "shell": {
      "open": false
    }
  }
}
