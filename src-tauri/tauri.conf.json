{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yt-spout-syphon-bridge",
  "version": "0.1.0",
  "identifier": "com.nakatani.yt-spout-syphon-bridge",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "yt-spout-syphon-bridge",
        "width": 360,
        "height": 532,
        "minWidth": 340,
        "minHeight": 332,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:webview:allow-internal-toggle-devtools",
            "core:window:allow-set-size"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp"
    ],
    "macOS": {
      "frameworks": ["./bindings/syphon/Syphon.framework"]
    }
  },
  "plugins": {
    "shell": {
      "open": false
    }
  }
}
